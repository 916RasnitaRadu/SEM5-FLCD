# Program that counts the even numbers from an array of n elements.

start

arr<integer> a[100];

integer p, n;

read(n);

p = 0;

for (integer i = 0; i < n; i = i + 1) {
    read(a[i]);
}

for (integer i = 0; i < n; i = i + 1) {
    if (a[i] % 2 == 0) {
        p = p + 1;
    }
}

print("The number of even numbers in the array is: ")
print(p);